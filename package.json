{
	"name": "@dariah-eric/dariah-campus",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "20.x",
		"pnpm": "8.x"
	},
	"packageManager": "pnpm@8.11.0",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --no-lint",
		"build": "next build",
		"dev": "next dev",
		"dev:cms": "decap-server",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ignore-path ./.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "next start",
		"test": "exit 0",
		"test:e2e": "dotenv -c production -- playwright test",
		"test:e2e:codegen": "dotenv -c production -- playwright codegen",
		"test:e2e:debug": "dotenv -c production -- playwright test --debug",
		"test:e2e:ui": "dotenv -c production -- playwright test --ui",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.6",
		"@next/bundle-analyzer": "^14.0.3",
		"@next/mdx": "^14.0.3",
		"@t3-oss/env-nextjs": "^0.7.1",
		"contentlayer": "^0.3.4",
		"cva": "^1.0.0-beta.1",
		"lucide-react": "^0.294.0",
		"next": "^14.0.3",
		"next-contentlayer": "^0.3.4",
		"next-intl": "^3.3.0",
		"next-themes": "^0.2.1",
		"react": "^18.2.0",
		"react-aria-components": "^1.0.0-rc.0",
		"react-dom": "^18.2.0",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-mdx-frontmatter": "^4.0.0",
		"schema-dts": "^1.1.2",
		"server-only": "^0.0.1",
		"sharp": "^0.33.0",
		"shikiji": "^0.7.5",
		"to-vfile": "^8.0.0",
		"vfile-matter": "^5.0.0",
		"yaml": "^2.3.4",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config": "^1.0.5",
		"@acdh-oeaw/eslint-config-next": "^1.0.8",
		"@acdh-oeaw/eslint-config-playwright": "^1.0.5",
		"@acdh-oeaw/eslint-config-react": "^1.0.6",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/stylelint-config": "^1.0.7",
		"@acdh-oeaw/tailwindcss-preset": "^0.0.17",
		"@acdh-oeaw/tsconfig": "^1.0.1",
		"@axe-core/playwright": "^4.8.2",
		"@commitlint/cli": "^18.4.3",
		"@mdx-js/loader": "^3.0.0",
		"@next/eslint-plugin-next": "^14.0.3",
		"@playwright/test": "^1.40.1",
		"@types/mdx": "^2.0.10",
		"@types/node": "^20.10.3",
		"@types/react": "^18.2.42",
		"@types/react-dom": "^18.2.17",
		"ci-info": "^4.0.0",
		"decap-server": "^3.0.1",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.55.0",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.0",
		"npm-run-all2": "^6.1.1",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.11.0",
		"tailwindcss": "^3.3.6",
		"tailwindcss-react-aria-components": "^1.0.0-rc.0",
		"typescript": "^5.3.3"
	},
	"pnpm": {
		"overrides": {
			"next": "$next"
		}
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict",
			"@acdh-oeaw/eslint-config-react",
			"@acdh-oeaw/eslint-config-next",
			"@acdh-oeaw/eslint-config-playwright",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"settings": {
			"tailwindcss": {
				"callees": [
					"cn",
					"variants"
				]
			}
		}
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|tsx),!./content/**": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
